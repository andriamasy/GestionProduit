{% extends 'base.html.twig' %}

{% block title %}Code Barre liste{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <div class="d-flex align-items-end flex-column">
                <div class="mt-auto p-2">
                    <a class="btn btn-info" href="{{ path('barCode_add') }}">Generer un Code Bar</a>
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Listes des Codes Bar</h3>
                            <div class="card-tools">
                                <form>
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="query" class="form-control float-right" placeholder="Recherche...">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0 scrollTable" >
                            <table class="table table-hover table-produit">
                                <thead>
                                <tr>
                                    <th>Numero code Barre </th>
                                    <th>Produit</th>
                                    <th>Code de Produit</th>
                                    <th style="width : 20%"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for barcode in barCodes %}
                                    <tr>
                                        <td>
                                            {{ barcode.code }}
                                        </td>
                                        <td>{{ barcode.produit.category.name }}</td>
                                        <td class="text-center">{{ barcode.produit.code }} </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-default btn-sm" href="#">
                                                <i class="fas fa-eye">
                                                </i>
                                            </a>
                                            <a class="btn btn-default btn-sm" href="#">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a class="btn btn-danger btn-sm deleteProduit" href="#" data-id="{{ barcode.id }}">
                                                <i class="fas fa-trash">
                                                </i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
            </div>
            <!-- /.row -->
        </div>
    </section>
{% endblock %}
