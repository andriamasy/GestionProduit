{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block extra_js %}
    <script src="{{ asset('js/jquery.collection.js') }}"></script>
{% endblock %}

{% block content %}
    {% form_theme form 'jquery.collection.html.twig' %}
<section class="content">
    <div class="container-fluid">
        {{ form_start(form)}}
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-light">
                    <div class="card-header">
                        <h3 class="card-title">Informations</h3>
                    </div>
                    <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_row(form.reference) }}
                                <div class="error-validation">
                                    {{ form_errors(form.reference) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_row(form.code) }}
                                <div class="error-validation">
                                    {{ form_errors(form.code) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_row(form.user) }}
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_row(form.createdAt ) }}
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-sm-3">
                            {{ form_row(form.commandProduits) }}
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_row(form.description) }}
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="card-footer">
                        <div class="float-right">
                            {{ form_row(form.Enregistrer) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('.my-selector').collection({
            add : '<a href="#" class="btn btn-info add-produit "><span class="fas fa-plus"></a>',
            remove: '<a href="#" class="btn btn-danger delete-produit"><span class="fas fa-trash"></a>',
            allow_up: false,
            allow_down: false,
            init_with_n_elements: ''
        });

    </script>
{% endblock %}



