{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}
<section class="content">
    <div class="container-fluid">
        {{ form_start(form)}}
        <div class="row">
            <div class="col-sm-6">
                <div class="card card-light">
                    <div class="card-header">
                        <h3 class="card-title">Informations</h3>
                    </div>
                    <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                {{ form_row(form.reference) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                {{ form_row(form.quantite) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                {{ form_row(form.code) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                {{ form_row(form.created_at) }}
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}



