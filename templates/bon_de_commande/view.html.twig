{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    <i class="fas fa-globe"></i>
                                    {% for commandProduits in command.commandProduits %}
                                        {% for produit in commandProduits  %}
                                            <span class="badge badge-success">{{ produit.category.name | upper }}</span>
                                        {% endfor %}
                                    {% endfor %}
                                    <small class="float-right">30/11/2019</small>
                                </h4>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row invoice-info">
                            <div class="col-sm-4 invoice-col">
                                From
                                <address>
                                    <strong>Admin, Inc.</strong><br>
                                    795 Folsom Ave, Suite 600<br>
                                    Marosokatra Ampasimanjeva, CA 94107<br>
                                    Phone: +261 34 81 993 82<br>
                                    Email: info@marosokatra.com
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                To
                                <address>
                                    <strong>{{ command.user.firstname  }} - {{ command.user.lastname }}</strong><br>
                                    795 Folsom Ave, Suite 600<br>
                                    {{ command.user.adresse }}<br>
                                    Phone: (555) 539-1037<br>
                                    Email: {{ command.user.email }}
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                <b>Reference #{{ command.reference }}</b><br>
                                <br>
                                <b>ID:</b> {{ command.id }}<br>
                                <b>Payment Due:</b> {{ command.createdAt | date('d/m/Y')}}<br>
                                <b>Code:</b> {{ command.code }} <br>
                                <b>Payement:</b> <span class="badge badge-success"><i class="fas fa-check"></i></span>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <!-- Table row -->
                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Qte</th>
                                        <th>Produit</th>
                                        <th>Reference #</th>
                                        <th>Déscription</th>
                                        <th>Montant</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for commandProduits in command.commandProduits %}
                                        <tr>
                                            <td>{{ commandProduits.qte }}</td>
                                            <td>{{ commandProduits.produit.category.name }}</td>
                                            <td>{{ command.reference }}</td>
                                            <td>{{ command.description }}</td>
                                            <td>{{ commandProduits.produit.prix }}</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <!-- accepted payments column -->
                            <div class="col-6">
                                <p class="lead">Mode de Payement:</p>
                                <img src="{{ asset('img/mvola.png') }}" alt="Mvola">
                                ou <span>Espèce</span>
                                <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                                    Etsy doostang zoodles disqus groupon greplin oooj voxy zoodles, weebly ning heekya handango imeem
                                    plugg
                                    dopplr jibjab, movity jajah plickers sifteo edmodo ifttt zimbra.
                                </p>
                            </div>
                            <!-- /.col -->
                            <div class="col-6">
                                <p class="lead">Montant</p>

                                <div class="table-responsive">
                                    <table class="table">
                                        <tr>
                                            <th style="width:50%">Subtotal:</th>
                                            <td>$250.30</td>
                                        </tr>
                                        <tr>
                                            <th>Tax (9.3%)</th>
                                            <td>$10.34</td>
                                        </tr>
                                        <tr>
                                            <th>Total:</th>
                                            <td>$265.24</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-12">
                                <a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
                                <button type="button" class="btn btn-success float-right"><i class="far fa-credit-card"></i> Submit
                                    Payment
                                </button>
                                <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                                    <i class="fas fa-download"></i> Generate PDF
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.invoice -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}


