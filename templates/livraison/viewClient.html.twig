{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    Bon de Livraison
                                </h4>
                                <div class="row invoice-info">
                                    <div class="col-md-2">
                                        <strong>Reference: </strong><span> {{ livraison.reference }}</span>
                                    </div>
                                    <div class="col-md-2">
                                        <strong><span>{{ livraison.dateLivraison | date('d/m/Y') }}</span></strong>
                                    </div>

                                    <div class="col-sm-4 invoice-col">
                                        <strong>Concerne votre commande N°</strong>
                                        <address>
                                            <strong>Code: </strong> {{ livraison.commande.code }} <br>
                                            <strong>Du: </strong> {{ livraison.commande.createdAt | date('d/m/Y') }}
                                        </address>
                                    </div>
                                    <div class="col-sm-4 invoice-col">
                                        <strong>Client - Destinataire</strong>
                                        <address>
                                            <strong>Nom Client: </strong>
                                            <span>
                                                {{ livraison.commande.user.firstname }}
                                                {{ livraison.commande.user.lastname }}
                                            </span> <br>
                                            <strong>Destinataire</strong>
                                            <span>
                                                {{ livraison.commande.user.adresse }}
                                            </span>
                                        </address>
                                    </div>
                                </div>

                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->

                        <!-- Table row -->
                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Reference #</th>
                                        <th>Désignation</th>
                                        <th>Quantités</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for commandproduit in livraison.commande.commandProduits %}
                                        <tr>
                                            <td>{{ livraison.commande.reference }}</td>
                                            <td>
                                                <span class="badge badge-success">
                                                    {{ commandproduit.produit.name }}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge badge-success">
                                                    {{ commandproduit.qte }}
                                                </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <!-- this row will not appear when printing -->
                        <div class="row no-print mt-md-5">
                            <div class="col-12">
                                <a href="#" class="btn btn-default"><i class="fas fa-print"></i> Print</a>

                                <button type="button" class="btn btn-info float-right" style="margin-right: 5px;">
                                    <i class="fas fa-download"></i> Generer PDF
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.invoice -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
{% endblock %}


