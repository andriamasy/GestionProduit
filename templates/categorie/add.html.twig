{% endblock %}

{% block content %}
<section class="content">
    <div class="container-fluid">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-light">
                        <div class="card-header">
                            <h3 class="card-title">Ajouter Nouvelle Production</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6-md">
                                    <div class="form-group">
                                        {{ form_row(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(form.prix) }}
                                        {{ form_errors(form.prix) }}
                                    </div>
                                </div>
                                <div class="col-6-md ml-sm-3">
                                    <div class="label">
                                        <label for="isActive">
                                            Activer / DÃ©sactiver
                                        </label>
                                    </div>
                                    <div class="form-group ">
                                        {{ form_row(form.isActivated) }}
                                        {{ form_errors(form.isActivated) }}
                                    </div>
                                    <div class="form-group mt-md-4">
                                        {{ form_row(form.taxe) }}
                                        {{ form_errors(form.taxe) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6-md">
                                    <div class="form-group m-2">
                                        <a href="{{ path('categorie') }}" class="btn btn-danger ">Annuler</a>
                                    </div>
                                </div>
                                <div class="col-6-md">
                                    <div class="form-group m-2">
                                        {{ form_row(form.submit) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}



